<div class="review">
    <h4>Leave your review</h4>
    <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
        <div>
            <div class="star-rating">
                <span class="star" data-value="5">&#9733;</span>
                <span class="star" data-value="4">&#9733;</span>
                <span class="star" data-value="3">&#9733;</span>
                <span class="star" data-value="2">&#9733;</span>
                <span class="star" data-value="1">&#9733;</span>
            </div>
            <input type="hidden" name="review[rating]" id="rating" required>
        </div>
        <div>
            <label for="comment" class="form-label"><b>Add comment</b></label><br>
            <textarea name="review[comment]" id="comment" cols="10" rows="2" class="form-control" required></textarea>
        </div>
        <br>
        <button class="btn btn-success" type="submit">Submit</button>
    </form>
</div>
