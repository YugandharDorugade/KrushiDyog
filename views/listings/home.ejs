<% layout("/layouts/boilerplate") %>

<style>
  body {
    background: url('/pexels-photo-807598.jpeg') no-repeat center center fixed;
    background-size: cover;
    color: rgba(255, 255, 255, 0.8);
  }

  .landing-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 40px;
    position: relative;
  }

  .glass {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 15px;
    backdrop-filter: blur(10px);
    padding: 20px;
  }

  .landing-section img {
    width: 400px;
    height: 280px;
    object-fit: cover;
    margin: 20px;
    border-radius: 1rem;
  }

  .text-container {
    max-width: 50%;
  }

  .text-container h1 {
    font-size: 3rem;
  }

  .text-container h2 {
    font-size: 2.5rem;
  }

  .text-container h3 {
    font-size: 2rem;
  }

  /* Add styles for the horizontal scrollable section */
  .scrollable-section {
    padding: 20px;
    text-align: center; /* Center the title */
  }

  .scrollable-section h2 {
    margin-bottom: 10px;
  }

  .card-container {
    display: flex;
    justify-content: flex-start; /* Align items to the start */
    flex-wrap: nowrap; /* Prevent wrapping */
    overflow-x: auto; /* Enables horizontal scrolling */
    padding: 10px 0; /* Space around cards */
    gap: 100px; /* Space between cards */
  }

  .card {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    padding: 15px; /* Padding inside cards */
    text-align: center;
    flex: 0 0 auto; /* Prevents cards from shrinking */
    width: 200px; /* Set card width */
    font-size: large;
    font-weight: 900;
  }

  .card img {
    width: 100%; /* Responsive image within the card */
    height: 200px; /* Fixed height for images */
    object-fit: cover; /* Maintain aspect ratio */
    border-radius: 5px; /* Rounded corners for images */
  }

  .card-name {
    margin-top: 5px; /* Space between image and name */
    font-weight: bold; /* Bold text for names */
  }
</style>

